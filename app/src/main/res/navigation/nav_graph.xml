<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainScreenFragment">

    <fragment
        android:id="@+id/mainScreenFragment"
        tools:layout="@layout/fragment_main_screen"
        android:name="com.hfad.palamarchuksuperapp.ui.screens.MainScreenFragment"
        android:label="MainScreenFragment" >
        <action
            android:id="@+id/to_skills_fragment"
            app:destination="@id/skillsFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_storeFragment"
            app:destination="@id/storeFragment" />
    </fragment>
    <fragment
        android:id="@+id/skillsFragment"
        android:name="com.hfad.palamarchuksuperapp.ui.screens.SkillsFragment"
        android:label="fragment_skills"
        tools:layout="@layout/fragment_skills" />
    <fragment
        android:id="@+id/storeFragment"
        android:name="com.hfad.palamarchuksuperapp.ui.screens.StoreFragment"
        android:label="StoreFragment" />
</navigation>